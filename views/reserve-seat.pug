extends sample-page

block content
    <section id="reserve-seat" class="section-bg wow fadeInUp">

        <div class="container">

            <div class="section-header">
                <br><br><br><br><br>
                <h2>Reserve Seat</h2>
                <p>Avail the Opportunity today to beautify your tomorrow</p>
            </div>

            <div class="form">
                if successMessage != ""
                    <div id="reserve-success-alert" class="alert alert-success" role="alert">#{successMessage}</div>

                <form method="post" role="form">
                  
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="phone" name="phone" class="form-control" id="phone" placeholder="Your Phone Number" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <select class="form-control" id="exampleFormControlSelect1" name="session" required>
                            <option value="">Select Session</option>
                            each session in sessions
                                option(value=session.title) #{session.title}
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="book-btn">Book Now</button>
                    </div>
                </form>
            </div>
        </div>
    </section>