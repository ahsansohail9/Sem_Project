extends main

block experts
    <section id="speakers" class="wow fadeInUp">
      <div class="container">
        <div class="section-header">
          <h2>Our Experts</h2>
          <p>Here are some of our Experts</p>
        </div>

        <div class="row">

          each expert in experts
            <div class="col-lg-4 col-md-6">
                <div class="speaker">
                    img(src="img/experts/"+expert.image , alt="Top Expert" class="img-fluid")
                    <div class="details">
                        <h3><a href="/">#{expert.name}</a></h3>
                        <p>( #{expert.qualification} )</p>
                        <div class="social">
                            <a href=""><i class="fa fa-twitter"></i></a>
                            <a href=""><i class="fa fa-facebook"></i></a>
                            <a href=""><i class="fa fa-google-plus"></i></a>
                            <a href=""><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
      </div>
    </section>