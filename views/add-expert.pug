extends sample-page

block content
    
    <section id="addexpert" class="section-bg wow fadeInUp">

        <div class="container">

            <div class="section-header">
                <br><br><br><br><br>
                <h2>Add Expert</h2>
            </div>

            <div class="form">
    
                <form method="post" role="form" enctype="multipart/form-data">
                  
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Name" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Qualification</label>
                        <input type="text" class="form-control" name="qualification" id="qualification" placeholder="Qualification" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Expert in</label>
                        <input type="text" class="form-control" name="expertee" placeholder="Expertee -- 1"  required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="text" class="form-control" name="expertee" placeholder="Expertee -- 2"/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="text" class="form-control" name="expertee" placeholder="Expertee -- 3"/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="text" class="form-control" name="expertee" placeholder="Expertee -- 4"/>
                    </div>                    
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Select Expert Type</label>
                        <select class="form-control" id="add-expert-type" name="type" required>
                            <option value="">Select Category</option>
                            <option value="IT-Expert">IT Expert</option>
                            <option value="Online-Educator">Online Educator</option>
                            <option value="Building-Architect">Building Architect</option>
                            <option value="Career-Counseller">Career Counseller</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Select Category</label>
                        <select class="form-control" id="add-expert-category" name="category" required>
                            <option value="">Select Category</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Contact</label>
                        <input type="text" class="form-control" name="contact" placeholder="LinkedIn Profile" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="email" class="form-control" name="contact" placeholder="Email"/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="text" class="form-control" name="contact" placeholder="Facebook"/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="text" class="form-control" name="contact" placeholder="Others"/>
                    </div> 
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Expert Image</label>
                        <input type="file" name="file" class="form-control" id="image" required />
                    </div>
                    
                    <div class="text-center">
                        <button type="submit" class="my-btn" id="add-expert-btn">Add Expert</button>
                    </div>
                </form>
                
            </div>
        </div>
    </section>