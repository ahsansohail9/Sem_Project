extends sample-page

block content
    <section id="signup" class="section-bg wow fadeInUp">

        <div class="container">

            <div class="section-header">
                <br><br><br><br><br>
                <h2>Signup</h2>
                <p>Join the fast growing community</p>
            </div>

            <div class="form">
    
                <form method="post" role="form" enctype="multipart/form-data">
                    if successMessage != ""
                        <div id="signup-success-alert" class="alert alert-success" role="alert">#{successMessage}</div>

                    if errorMessage != ""
                        <div id="signup-error-alert" class="alert alert-danger" role="alert">#{errorMessage}</div>
                  
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Name" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="phone" name="phone" class="form-control" id="phone" placeholder="Phone" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <input type="password" name="password" class="form-control" id="password" placeholder="Password" required/>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label>Upload Profile Image</label>
                        <input type="file" name="file" class="form-control" id="image"/>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="my-btn" id="signup-btn">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </section>